{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "version": 2,
    "cleanUrls": true,
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/api/$1.js" },
      { "source": "/api(.*)",       "destination": "/publicmenu/index.html" },
      { "source": "/(.*)",       "destination": "/public/index.html" }
    ]
  }